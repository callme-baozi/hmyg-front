.goods-info-box {
  padding: 10px;
  padding-right: 0;
}
.goods-info-box .price {
  color: #c00000;
  font-size: 18px;
  margin: 10px 0;
}
.goods-info-box .goods-info-body {
  display: flex;
  justify-content: space-between;
}
.goods-info-box .goods-info-body .goods-name {
  font-size: 18px;
  padding-right: 10px;
}
.goods-info-box .goods-info-body .favi {
  width: 120px;
  font-size: 14px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #bcbcbc;
}
.goods-info-box .yf {
  margin: 10px 0;
  font-size: 12px;
  color: gray;
}
.goods-detail-container {
  padding-bottom: 50px;
}
.goods_nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.popup-content {
  align-items: center;
  justify-content: center;
  padding: 15px;
  height: 50px;
  background-color: #fff;
  font-size: 18px;
}

